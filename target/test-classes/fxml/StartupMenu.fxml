<AnchorPane prefHeight="720.0" prefWidth="960.0" xmlns="http://javafx.com/javafx/8.0.121"
            xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="com.PhotoManager.view.StartupMenuController">
   <children>
      <VBox layoutX="275.0" layoutY="85.0" prefHeight="720.0" prefWidth="960.0" AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0">
         <children>
            <Separator opacity="0.0" prefHeight="252.0" prefWidth="960.0" />
            <Label alignment="CENTER" prefWidth="960.0" text="Picture Manager">
               <font>
                  <Font size="50.0" />
               </font>
            </Label>
            <Separator opacity="0.0" prefHeight="73.0" prefWidth="960.0" />
            <Label alignment="CENTER" prefWidth="960.0"
                   text="Enter the directory of your Photo Collection">
               <font>
                  <Font size="20.0" />
               </font></Label>
            <HBox prefHeight="66.0" prefWidth="960.0">
               <children>
                  <Separator opacity="0.0" orientation="VERTICAL" prefHeight="66.0" prefWidth="134.0" />
                  <TextField fx:id="txtPath" prefHeight="26.0" prefWidth="604.0" />
                  <Button fx:id="btnChoosePath" mnemonicParsing="false" onAction="#handleChoosePath" text="Choose..." />
