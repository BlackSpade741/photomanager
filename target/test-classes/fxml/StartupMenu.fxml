            <HBox prefHeight="100.0" prefWidth="200.0">
               <children>
                  <Separator opacity="0.0" orientation="VERTICAL" prefHeight="100.0" prefWidth="428.0" />
                  <Button fx:id="btnStart" mnemonicParsing="false" onAction="#handleStart" text="START">
